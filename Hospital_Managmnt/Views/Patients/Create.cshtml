@model Hospital_Managmnt.Models.Patients

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/LayoutDoctor.cshtml";
}

<section class="content-header">
    <h1>Patients</h1>
</section>
<!--Main Content-->
<section class="content container-fluid">
    <!--Horizontal form-->
    <div class="box box-success">
        <div class="box-header">
            <h3 class="box-title">Add Patients</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="post" action="Create">
            <div class="box-body">
                <div class="form-group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" name="Name" placeholder="Name" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Phone</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" name="Phone" placeholder="Phone" />
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Gender</label>
                    <div class="col-sm-7">
                        <input type="radio" name="Gender" value="M" /> Male
                        <input type="radio" name="Gender" value="F" /> Female
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Age</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" name="Age" placeholder="Age" />
                    </div>
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">DoctorId</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" name="DoctorId" placeholder="DoctorId" />
                    </div>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">NurseId</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" name="NurseId" placeholder="NurseId" />
                    </div>
                    <span asp-validation-for="NurseId" class="text-danger"></span>
                </div>
            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-success" style="margin-left:200px;">Create</button>
                <button type="submit" class="btn btn-danger" style="margin-left:70px;">Cancel</button>
            </div>
        </form>
    </div>

</section>